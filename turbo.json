{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "build/**"
      ]
    },
    "clean": {},
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "prebuild": {},
    "postinstall": {
      "dependsOn": [
        "^postinstall",
        "prebuild",
        "build"
      ]
    }
  }
}
